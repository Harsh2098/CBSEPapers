<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.shantanu.cbsepapers.PaperList"
                android:id="@+id/relativelayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&lt;Subject name>"
        android:id="@+id/tvSub"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper 1"
        android:id="@+id/b1"
        android:layout_below="@+id/tvSub"
        android:layout_marginTop="128dp"
        android:layout_alignRight="@+id/b2"
        android:layout_alignEnd="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:background="#00CC66" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_below="@+id/b1"
        android:layout_centerHorizontal="true"
        android:text="Paper 2"
        android:background="#00cc66" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper 3"
        android:id="@+id/b3"
        android:layout_below="@+id/b2"
        android:layout_centerHorizontal="true"
        android:background="#00cc66" />

</RelativeLayout>
