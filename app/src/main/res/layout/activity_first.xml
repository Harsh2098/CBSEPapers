<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shantanu.cbsepapers.First"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose subjects "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physics"
        android:id="@+id/cbPHY"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="89dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chemistry"
        android:id="@+id/cbCHM"
        android:layout_below="@+id/cbPHY"
        android:layout_alignLeft="@+id/cbPHY"
        android:layout_alignStart="@+id/cbPHY"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maths"
        android:id="@+id/cbMAT"
        android:layout_below="@+id/cbCHM"
        android:layout_alignLeft="@+id/cbCHM"
        android:layout_alignStart="@+id/cbCHM"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/cbENG"
        android:layout_below="@+id/cbMAT"
        android:layout_alignLeft="@+id/cbMAT"
        android:layout_alignStart="@+id/cbMAT"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biology"
        android:id="@+id/cbBIO"
        android:layout_below="@+id/cbENG"
        android:layout_alignLeft="@+id/cbENG"
        android:layout_alignStart="@+id/cbENG"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Science"
        android:id="@+id/cbCS"
        android:layout_below="@+id/cbBIO"
        android:layout_alignLeft="@+id/cbBIO"
        android:layout_alignStart="@+id/cbBIO"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(can be changed later)"
        android:id="@+id/tvChange"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Browsing"
        android:id="@+id/bNext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />
</RelativeLayout>
