<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                >

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Physics"
        android:id="@+id/bPhysics"
        android:onClick="Click"
        android:layout_alignBaseline="@+id/bChemistry"
        android:layout_alignBottom="@+id/bChemistry"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click to view sample papers"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Maths"
        android:id="@+id/bMaths"
        android:layout_alignBaseline="@+id/bPhysics"
        android:layout_alignBottom="@+id/bPhysics"
        android:layout_toLeftOf="@+id/bEnglish"
        android:layout_toStartOf="@+id/bEnglish" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/bEnglish"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bPhysics"
        android:layout_toStartOf="@+id/bPhysics" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chemistry"
        android:id="@+id/bChemistry"
        android:layout_below="@+id/bEnglish"
        android:layout_alignLeft="@+id/bEnglish"
        android:layout_alignStart="@+id/bEnglish" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Biology"
        android:id="@+id/bBiology"
        android:layout_alignTop="@+id/bEnglish"
        android:layout_toLeftOf="@+id/bEnglish"
        android:layout_toStartOf="@+id/bEnglish" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CS"
        android:id="@+id/bCS"
        android:layout_alignTop="@+id/bEnglish"
        android:layout_toRightOf="@+id/bEnglish"
        android:layout_toEndOf="@+id/bEnglish" />
</RelativeLayout>
